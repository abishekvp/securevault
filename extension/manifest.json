{
  "manifest_version": 3,
  "name": "Secure Vault",
  "version": "1.0.1",
  "description": "Securely manage and auto-fill your credentials.",
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/api-content.js", "content/content.js"],
      "css": ["content/content.css"]
    }
  ]
}
